    console.log("[ " + x + " " + y + " " + z + " " + 1 + " ]" + " x " + "[ " + 1 + " " + 0 + " " + 0 + " " + 0 + " ]")
    console.log("  " + " " + " " + " " + " " + " " + " " + " " + "  " + "   " + "[ " + 0 + " " + -1 + " " + 0 + " " + 0 + " ]")
